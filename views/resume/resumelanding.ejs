    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="/images/logo-small.png">
    <title>Build a resume</title>
  </head>
  <body>
    <section class="resume-header">
      <%-include('../components/regular_nav.ejs') -%>

      <div class="container">
        <div class="row d-flex justify-content-end">
          <div class="col-lg-5">
            <div class="placeholder" style="background:transparent;width:50%;height:100%;">

            </div>
          </div>
          <div class="col-lg-7">
            <h1>EVERY GREAT MASTERPIECE BEGINS WITH A CANVAS</h1>
            <p class="fs-5 mt-3 mb-4">Stand out to employers with a well built resume.</p>
            <div class="col-12 w-lg-75 w-md-75 w-sm-100 d-flex align-items-center justify-content-between res-menu">
              <p class="fs-4">Build a new resume</p>
              <div class="badge bg-dark">Coming Soon</div>
              <i class="fas fa-arrow-right"></i>
            </div>
            <div class="col-12 w-lg-75 w-md-75 w-sm-100 d-flex align-items-center justify-content-between mt-4 res-menu">
              <p class="fs-4">Build a portfolio website</p>
              <div class="badge bg-dark">Coming Soon</div>
              <i class="fas fa-arrow-right"></i>
            </div>
        </div>
      </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
      const navigate = ()=>{
        window.location.href = '/resume/create/templates'
      }
  
      function main(){
        $(window).on('load',()=>{
          if(sessionStorage.getItem('inTchLgIn')=== null || sessionStorage.getItem('inTchLgIn') === undefined){
              $('.user-actions').show();
              $('.user-login-actions').hide()
          }else{
              $('.user-actions').hide();
              $('.user-login-actions').show()
          }
        })
        var $menuBtn = $('.menu-toggle');
        var $menuTp = $('#menu-top');
        var $menuBtm = $('#menu-btm')
        var $menuTxt = $('#menu-txt')
        var $navMenu = $('.nav-links');

        $menuBtn.on('click', ()=>{
        $menuTp.toggleClass('open-top');
        $menuBtm.toggleClass('open-bottom');
        $menuTxt.toggleClass('open-text');
        $navMenu.toggleClass('open-menu')
    })


      }
  
      $(document).ready(main)
  
    </script>

  </body>

</html>
