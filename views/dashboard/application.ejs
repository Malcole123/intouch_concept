<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/vue@2.6.14" defer></script>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous" defer></script>
<script src="/js/dashboard/main.js" defer></script>
<script type="module" src="/js/dashboard/application_control.js" defer></script>
<link href="/css/dashboard/main.css" rel="stylesheet">
<link href="/css/dashboard/applications.css" rel="stylesheet">
<link rel="icon" type="image/x-icon" href="/images/logo-small.png">

</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="logo-src"></div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>    <div class="app-header__content">
                <div class="app-header-left">
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <input type="text" class="search-input" placeholder="Type to search">
                            <button class="search-icon"><span></span></button>
                        </div>
                        <button class="close"></button>
                    </div>       
                </div>
                <%-include('../components/dashboard_components/user_actions.ejs')-%>
            </div>
        </div>              
        <div class="app-main">
                <div class="app-sidebar sidebar-shadow">
                    <div class="app-header__logo">
                        <div class="logo-src"></div>
                        <div class="header__pane ml-auto">
                            <div>
                                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                                    <span class="hamburger-box">
                                        <span class="hamburger-inner"></span>
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="app-header__mobile-menu">
                        <div>
                            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                                <span class="hamburger-box">
                                    <span class="hamburger-inner"></span>
                                </span>
                            </button>
                        </div>
                    </div>
                    <div class="app-header__menu">
                        <span>
                            <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                                <span class="btn-icon-wrapper">
                                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                                </span>
                            </button>
                        </span>
                    </div>    
                    <%-include('../components/dashboard_components/sidebar.ejs')-%>                      
                </div>    
                <div class="app-main__outer">
                    <div class="app-main__inner" id="app__body"> 
                        <div class="app-page-title">
                            <div class="page-title-wrapper">
                                <div class="page-title-heading">
                                    <div class="page-title-icon">
                                        <i class="pe-7s-car icon-gradient bg-mean-fruit">
                                        </i>
                                    </div>
                                    <div>Applications
                                        <div class="page-title-subheading">
                                            Manage all your applications and streamline your hiring process
                                        </div>
                                    </div>
                                </div>
                                <div class="page-title-actions">
                                    <button type="button" data-toggle="tooltip" title="Example Tooltip" data-placement="bottom" class="btn-shadow mr-3 btn btn-dark">
                                        <i class="fa fa-star"></i>
                                    </button>
                                    <div class="d-inline-block dropdown">
                                        <button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn-shadow dropdown-toggle btn btn-info">
                                            <span class="btn-icon-wrapper pr-2 opacity-7">
                                                <i class="fa fa-business-time fa-w-20"></i>
                                            </span>
                                            Buttons
                                        </button>
                                        <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
                                            <ul class="nav flex-column">
                                                <li class="nav-item">
                                                    <a href="javascript:void(0);" class="nav-link">
                                                        <i class="nav-link-icon lnr-inbox"></i>
                                                        <span>
                                                            Inbox
                                                        </span>
                                                        <div class="ml-auto badge badge-pill badge-secondary">86</div>
                                                    </a>
                                                </li>
                                                <li class="nav-item">
                                                    <a href="javascript:void(0);" class="nav-link">
                                                        <i class="nav-link-icon lnr-book"></i>
                                                        <span>
                                                            Book
                                                        </span>
                                                        <div class="ml-auto badge badge-pill badge-danger">5</div>
                                                    </a>
                                                </li>
                                                <li class="nav-item">
                                                    <a href="javascript:void(0);" class="nav-link">
                                                        <i class="nav-link-icon lnr-picture"></i>
                                                        <span>
                                                            Picture
                                                        </span>
                                                    </a>
                                                </li>
                                                <li class="nav-item">
                                                    <a disabled href="javascript:void(0);" class="nav-link disabled">
                                                        <i class="nav-link-icon lnr-file-empty"></i>
                                                        <span>
                                                            File Disabled
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>    </div>
                        </div>            
                    
                        <div class="row">
                            <div class="col-md-6 col-xl-4">
                                <div class="card mb-3 widget-content">
                                    <div class="widget-content-outer">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left">
                                                <div class="widget-heading">Pending Review</div>
                                                <div class="widget-subheading">
                                                    For <%= active_list.length %> Job Listings
                                                </div>
                                            </div>
                                            <div class="widget-content-right">
                                                <div id="pending_review_application" class="widget-numbers text-success">
                                                    <%= app_break.pending %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-4">
                                <div class="card mb-3 widget-content">
                                    <div class="widget-content-outer">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left">
                                                <div class="widget-heading">Short List</div>
                                                <div class="widget-subheading">
                                                    For <%= active_list.length %> listings from <%= application.length %> applications
                                                </div>
                                            </div>
                                            <div class="widget-content-right">
                                                <div class="widget-numbers text-warning"><%= app_break.short_listed %></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-4">
                                <div class="card mb-3 widget-content">
                                    <div class="widget-content-outer">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left">
                                                <div class="widget-heading">Pending Interviews</div>
                                                <div class="widget-subheading">Interviews pending today</div>
                                            </div>
                                            <div class="widget-content-right">
                                                <div class="widget-numbers text-info"><%= app_break.contacted %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row parent__max">
                            <% active_list.forEach((listing,index)=>{ %>
                                <% var spec_data = [] %>
                                <% application.forEach((appl,index)=> { %>
                                    <% if( appl.job_id === listing.id ){ %>
                                        <% spec_data.push(appl) %>
                                    <% } %>  
                                <% }) %>
                                <div class="col-md-12">
                                    <div class="main-card mb-3 card __table__cards" id="card<%=index %>" data-list-title="<%=listing.title%>" data-app-data="<%=JSON.stringify(spec_data)%>" data-id="<%=index%>">
                                        <div class="d-flex justify-content-between border-0 card-header">
                                            <%= index + 1 %>. <%= listing.title %>
                                            <div class="d-flex g-2 card-header__right">
                                                <button type="button" data-toggle="tooltip" title="Full Screen" data-placement="bottom" class="btn-shadow mr-3 btn btn-dark initFullScreen" @click="full__Focus(<%=index%>)">
                                                    <i class="pe-7s-display2 fs-5"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="scroll-area-lg">
                                                <div class="scrollbar-container ps--active-y">
                                                    <div class="table-responsive">
                                                        <% var app_count = 0  %>
                                                        <table class="align-end mb-0 table table-hover">
                                                            <thead class="border-0">
                                                            <tr>
                                                                <th class="text-left">Name</th>
                                                                <th class="text-left">Status</th>
                                                                <th class="text-left">Comments</th>
                                                                <th class="text-right">Actions</th>
                                                            </tr>
                                                            </thead>
                                                            <tbody>
                                                                <% application.forEach(function(app,index){ %>
                                                                    <% if( app.job_id === listing.id ){ %>
                                                                        <% app_count += 1 %>
                                                                        <tr>
                                                                            <td>
                                                                                <div class="widget-content p-0">
                                                                                    <div class="widget-content-wrapper">
                                                                                        <div class="widget-content-left mr-3">
                                                                                            <div class="widget-content-left">
                                                                                                <img width="40" class="rounded-circle" src="" alt="">
                                                                                            </div>
                                                                                        </div>
                                                                                        <div class="widget-content-left flex2">
                                                                                            <div class="widget-heading"> <%= app.name %></div>
                                                                                            <div class="widget-subheading opacity-7"></div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </td>
                                                                            <td class="text-left">
                                                                            <% var badge_text = app.status
                                                                                var formatted_status = badge_text.replaceAll('_',' ')
                                                                             %>
                                                                                <% if(badge_text.replaceAll(" ","_") === 'pending_review' ){ %>
                                                                                    <div class="badge badge-info">
                                                                                        <%= formatted_status %>
                                                                                    </div>
                                                                                <% }else if(badge_text === 'contacted'){ %>
                                                                                    <div class="badge badge-primary">
                                                                                        <%= formatted_status %>
                                                                                    </div>
                                                                                <% }else if(badge_text === 'interviewed'){%>
                                                                                    <div class="badge badge-dark">
                                                                                        <%= formatted_status %>
                                                                                    </div>
                                                                                <% }else if(badge_text === 'reviewed'){%>
                                                                                    <div class="badge badge-secondary">
                                                                                        <%= formatted_status %>
                                                                                    </div>
                                                                                <% }else if(badge_text === 'denied'){%>
                                                                                    <div class="badge badge-danger">
                                                                                        <%= formatted_status %>
                                                                                    </div>
                                                                                <% }else if(badge_text.replaceAll(" ","_") === 'short_listed'){%>
                                                                                    <div class="badge badge-success">
                                                                                        <%= formatted_status %>
                                                                                    </div>
                                                                                <% }else{%>
                                                                                    <div class="badge badge-light">
                                                                                        <%= formatted_status %>
                                                                                    </div>
                                                                                <% } %>
                                                                            </td>
                                                                            <td class="text-left">
                                                                                <%= app.recruiter_comment.comment %>
                                                                            </td>
                                                                            <td class="text-right">
                                                                                <button type="button" id="PopoverCustomT<%=index%>" class="btn btn-primary btn-sm ml-auto" data-app-id ="<%= app.id %>">Details</button>
                                                                            </td>
                                                                        </tr> 
                                                                    <% } %>
                                                                <% }) %>
                                                               
                                                                <% var page_count = app_count/ 25%>
                                                            </tbody>
                                                        </table>
                                                        <% if(app_count===0){ %>
                                                            <div style="width:100%" class="d-flex flex-column align-items-center justify-content-center">
                                                                <span class="d-block fs-6 mt-3 mb-3">No applications just yet</span>
                                                                <img style="width:20%; margin:0 auto" src="../images/dashboard/ill/no_applications_found.svg" alt="No applications just yet">
                                                            </div>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center card-footer">
                                            <nav class="" aria-label="Page navigation example">
                                                <ul class="pagination">
                                                    <li class="page-item"><a href="javascript:void(0);" class="page-link" aria-label="Previous"><span aria-hidden="true">«</span><span class="sr-only">Previous</span></a></li>
                                                    <% for(let i = 1; i <= page_count; i++){ %>
                                                        <% if(i === 1){ %>
                                                            <li class="page-item active"><a href="javascript:void(0);" class="page-link"><%= i + 1 %></a></li>
                                                        <% }else{ %>
                                                            <li class="page-item"><a href="javascript:void(0);" class="page-link"><%= i + 1 %></a></li>
                                                        <% } %>
                                                    <% } %>
                                                    <li class="page-item"><a href="javascript:void(0);" class="page-link" aria-label="Next"><span aria-hidden="true">»</span><span class="sr-only">Next</span></a></li>
                                                </ul>
                                            </nav>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>

                    </div>
                    <div class="app-wrapper-footer">
                        <div class="app-footer">
                            <div class="app-footer__inner">
                                <div class="app-footer-left">
                                    <ul class="nav">
                                        <li class="nav-item">
                                            <a href="javascript:void(0);" class="nav-link">
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="javascript:void(0);" class="nav-link">
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="app-footer-right">
                                    <ul class="nav">
                                        <li class="nav-item">
                                            <a href="javascript:void(0);" class="nav-link">
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>   
                 </div>
        </div>
    </div>
    <section class = "application__modal" id="app__modal">
        <div class="application__display__body">
            <div class="application__display__header">
                <h4>{{applications.length}} Applications for {{title}} </h4>
                <i id="close__app_modal" class="pe-7s-close fs-1" style="cursor:pointer"></i>
            </div>
            <div class="__app__sort__control">
             
            </div>
            <div class="application__display__content">
                <div class="__app__view">
                    <div class="row mb-3 d-flex justify-content-center">
                        <i id="close_app__view"class="pe-7s-angle-up-circle text-dark text-center fs-1" style="cursor:pointer"></i>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <div class="__app__card">
                                <header class="article-header">
                                    <div>
                                        <div class="text-dark category-title">
                                            Submitted
                                            <span class="date">{{focus.data.created_at_str}}</span>
                                        </div>
                                    </div>
                                    <h2 class="article-title">
                                        {{focus.data.name}}
                                    </h2>
                                </header>     
                                <div class="tags">
                                    <div style="text-transform:capitalize;">{{focus.data.status}}</div>
                                </div>
                                <div class="buttons">
                                    <button type="button" class="btn btn-dark">Download CV</button>
                                    <button type="button" class="ml-2 btn btn-success">Contact</button>
                                </div>
                            </div>
                            <div class="w-100 mt-2">
                                <div class="__app__card" style="height:60px">   
                                    <h2 class="article-title">
                                        Status
                                    </h2>
                                    <div class="buttons">
                                        <button type="button" class="btn btn-success">Short List</button>
                                        <button type="button" class="ml-2 btn btn-danger">Reject</button>
                                        <button type="button" class="ml-2 btn btn-dark">Interviewed</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="__app__card" style="height:408px">
                                <h2 class="article-title">
                                    Comments
                                </h2>
                                <div class="comments__area">
                                    <div class="__comment__card" v-for="(comment,index) in focus.data.recruiter_comment" :key="comment.id">
                                        <div class="__cc__head">
                                            <h6>{{comment.made_by}}</h6>
                                        </div>
                                        <p>{{comment.comment}}</p>
                                    </div>
                                    <div class="d-flex flex-column align-items-center justify-content-center" v-if="focus.data.recruiter_comment">
                                        <h6>No comments made yet</h6>
                                    </div>
                                </div>
                                <div class="form-group mt-2 commentDisp">
                                    <textarea class="form-control" id="commentInput" rows="3" style="resize:none" v-model.trim="focus.changes.comment"></textarea>
                                    <small>{{ 300 - focus.changes.comment.length }}/300 characters remaining</small>
                                </div>
                                <button type="button" class="btn-dark mt-1" id="addCommentBtn">Leave a comment...</button>
                              
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="__app__card" style="height:408px">
                                <header class="article-header">
                                    <div>
                                        <h2 class="article-title">
                                            Pre-Screening Test
                                        </h2>
                                    </div>
                                 
                                </header>     
                              
                            </div>
                        </div>
                    </div>
                </div>
                <div class="__applications__scroll">
                    <div class="__app__card" v-for="(app,index) in applications" :data-id= "index" :data-application-info="app" @mouseenter="preview" @mouseleave="end_preview(index)">
                        <header class="article-header">
                            <div>
                                <div class="text-dark category-title">
                                    Submitted
                                    <span class="date">{{app.created_at_str}}</span>
                                </div>
                            </div>
                            <h2 class="article-title">
                                {{app.name}}
                            </h2>
                        </header>
                        <div class="author">
                            <div class="profile"></div>
                            <div class="info">
                                <div class="caption">Recent comment</div>
                                <div class="name">{{app.recruiter_comment.length}}&nbsp comments made</div>
                            </div>
                        </div>      
                        <div class="tags">
                            <div style="text-transform:capitalize;">{{app.status.replaceAll('_',' ')}}</div>
                        </div>
                        <div class="__buttons">
                            <button type="button" class="btn btn-dark" @click="view_app(index)">View</button>
                        </div>
                    </div>           
                </div>
            </div>
            <div class="__app__filter__control">
                <div class="__skip__start __control__button" @click="regularScroll('full_left')">
                    <span class="__arrow __left_"></span>
                    <span class="__arrow __left_"></span>
                </div>
                <div class="__scroll__left __control__button" @click="regularScroll('p_left')">
                    <span class="__arrow __left_"></span>
                </div>
                <div class="__auto__play__init">
                <img :src="display.autoPlay ? '/images/dashboard/icons/pause.svg' : '/images/dashboard/icons/play.svg'" alt="Play/pause auto scroll"> 
                </div>
                <div class="__scroll__right __control__button" @click="regularScroll('p_right')">
                    <span class="__arrow __right_"></span>
                </div>
                <div class="__skip__end __control__button" @click="regularScroll('full_right')">
                    <span class="__arrow __right_"></span>
                    <span class="__arrow __right_"></span>
                </div>
            </div>

        </div>
    </section>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</html>
