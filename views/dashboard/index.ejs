<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
<script defer>
    const inviteRecruit = new Vue({
        el:'#exampleModalToggle',
        data(){
            recruit_email = ""
            recruit_name =""
            share_link = ""
            company_name = ""
            company_id = 0
            share_link= ""
            base_url="https://localhost:3000/employer/recruiter/register"
            ref_id = ""
            //Controls states .
            processing = false
            completed = false
            reject = false
            step = 1
            max_send = 3
            email_sent = false
            email_btn_txt = "Send in email"
            sent = 0

            setReady=()=>{
                idPlace = document.getElementById('placeHold');
                data = idPlace.getAttribute('data-company-data');
                company_id = data;
                create_link()
            }

            create_link=()=>{
                var linkSpace = document.getElementById('invite-share-link');
                function dec2hex (dec) {
                  return dec.toString(16).padStart(2, "0")
                }
                var arr = new Uint8Array((18|| 40) / 2)
                window.crypto.getRandomValues(arr)
                ref_id = Array.from(arr, dec2hex).join('')
                share_link = base_url + "?ref_id=" + ref_id
                linkSpace.value = share_link
            }

            copy_link = (e)=>{
                if(share_link.length < 5){return false}
                button = e.currentTarget
                console.log(button)
                button_text = button.textContent //Original class and text
                buttonClass = button.className
                button.className = "btn btn-success"
                button.textContent = "Copied !"
                setTimeout(()=>{
                    button.textContent = button_text
                    button.className = buttonClass 
                },2300)
                copy_val = share_link
                navigator.clipboard.writeText(copy_val);
            }

            sendLink= async ()=>{
                $('#sendEmailBtn').hide()
                $('.spinner-border').removeClass('hidden')
                serveRes = await fetch('/employer/recruiter/invite', {
                    method:"POST",
                    headers:{
                        "Content-Type":"application/json"
                    },
                    body:JSON.stringify({
                        refID:ref_id,
                        companyID:company_id,
                        email:recruit_email,
                        name:recruit_name,
                        share_link:share_link
                    })
                }).then(res=> res.json()).then(data=>{
                    $('#sendEmailBtn').show()
                    $('.spinner-border').addClass('hidden')
                    if(data.complete){
                        completed = true
                        sent += 1
                        email_btn_txt = "Sent !"
                        $('#sentBtn').removeClass('hidden')
                        $('#sendEmailBtn').addClass('hidden')
                        setTimeout(()=>{
                            email_btn_txt = "Send email"
                            completed = false
                            $('#sentBtn').addClass('hidden')
                            $('#sendEmailBtn').removeClass('hidden')
                        },3000)
                    }else{
                        completed = false
                    }
                }).catch(error=>{
                    $('#sendEmailBtn').show()
                    $('.spinner-border').addClass('hidden')
                    $('#errorBtn').removeClass('hidden')
                    setTimeout(()=>{
                        email_btn_txt = "Send email"
                        completed = false
                        $('#sentBtn').addClass('hidden')
                        $('#sendEmailBtn').removeClass('hidden')
                    },3000)
                })
            }
        }
    })
    window.addEventListener('load', ()=>{
        setTimeout(()=>{
            setReady()
        },7000)
    })

</script>
